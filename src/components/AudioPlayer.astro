---
const { audio, isYouTube } = Astro.props;
---

<div class="audio-player" id="audio-player" data-audio={audio} data-type={isYouTube ? 'youtube' : 'mp3'}>
  <button class="play-btn" id="play-btn" aria-label="Play">
    <svg id="icon-play" width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
      <polygon points="4,2 18,10 4,18" />
    </svg>
    <svg id="icon-pause" width="20" height="20" viewBox="0 0 20 20" fill="currentColor" style="display:none">
      <rect x="3" y="2" width="5" height="16" />
      <rect x="12" y="2" width="5" height="16" />
    </svg>
  </button>

  <span class="time-display" id="time-current">0:00</span>

  <input type="range" class="progress-bar" id="progress-bar" min="0" max="100" value="0" step="0.1" />

  <span class="time-display" id="time-duration">0:00</span>

  <span class="section-label" id="section-label"></span>

  {isYouTube && <div id="youtube-player" style="position:absolute;width:1px;height:1px;overflow:hidden;top:-9999px"></div>}
  {!isYouTube && <audio id="mp3-player" src={audio} preload="metadata"></audio>}
</div>

<style>
  .audio-player {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--bg-surface);
    border-top: 1px solid #ffffff15;
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.6rem 1rem;
    z-index: 1000;
    backdrop-filter: blur(10px);
  }

  .play-btn {
    background: none;
    border: 2px solid var(--chord);
    color: var(--chord);
    border-radius: 50%;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    flex-shrink: 0;
    transition: background 0.2s;
  }
  .play-btn:hover {
    background: #ffffff10;
  }

  .time-display {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
    min-width: 3rem;
    text-align: center;
    flex-shrink: 0;
  }

  .progress-bar {
    flex: 1;
    height: 4px;
    -webkit-appearance: none;
    appearance: none;
    background: #ffffff20;
    border-radius: 2px;
    outline: none;
    cursor: pointer;
  }
  .progress-bar::-webkit-slider-thumb {
    -webkit-appearance: none;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--chord);
    cursor: pointer;
  }
  .progress-bar::-moz-range-thumb {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--chord);
    cursor: pointer;
    border: none;
  }

  .section-label {
    font-size: 0.75rem;
    color: var(--chord);
    max-width: 150px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex-shrink: 0;
  }

  @media (max-width: 600px) {
    .audio-player {
      gap: 0.4rem;
      padding: 0.5rem 0.6rem;
    }
    .section-label {
      display: none;
    }
    .time-display {
      font-size: 0.65rem;
      min-width: 2.5rem;
    }
  }

  @media print {
    .audio-player {
      display: none;
    }
  }
</style>
